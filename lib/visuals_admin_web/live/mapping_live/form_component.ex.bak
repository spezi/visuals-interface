defmodule VisualsAdminWeb.MappingLive.FormComponent do
  use VisualsAdminWeb, :live_component

  alias VisualsAdmin.Hyperion

  @impl true
  def render(assigns) do
    ~H"""
    <div>
      <.header>
        <%= @title %>
        <:subtitle>Use this form to manage mapping records in your database.</:subtitle>
      </.header>

      <.simple_form
        for={@form}
        id="mapping-form"
        phx-target={@myself}
        phx-change="validate"
        phx-submit="save"
      >

        <:actions>
          <.button phx-disable-with="Saving...">Save Mapping</.button>
        </:actions>
      </.simple_form>
    </div>
    """
  end

  @impl true
  def update(%{mapping: mapping} = assigns, socket) do
    changeset = Hyperion.change_mapping(mapping)

    {:ok,
     socket
     |> assign(assigns)
     |> assign_form(changeset)}
  end

  @impl true
  def handle_event("validate", %{"mapping" => mapping_params}, socket) do
    changeset =
      socket.assigns.mapping
      |> Hyperion.change_mapping(mapping_params)
      |> Map.put(:action, :validate)

    {:noreply, assign_form(socket, changeset)}
  end

  def handle_event("save", %{"mapping" => mapping_params}, socket) do
    save_mapping(socket, socket.assigns.action, mapping_params)
  end

  defp save_mapping(socket, :edit, mapping_params) do
    case Hyperion.update_mapping(socket.assigns.mapping, mapping_params) do
      {:ok, mapping} ->
        notify_parent({:saved, mapping})

        {:noreply,
         socket
         |> put_flash(:info, "Mapping updated successfully")
         |> push_patch(to: socket.assigns.patch)}

      {:error, %Ecto.Changeset{} = changeset} ->
        {:noreply, assign_form(socket, changeset)}
    end
  end

  defp save_mapping(socket, :new, mapping_params) do
    case Hyperion.create_mapping(mapping_params) do
      {:ok, mapping} ->
        notify_parent({:saved, mapping})

        {:noreply,
         socket
         |> put_flash(:info, "Mapping created successfully")
         |> push_patch(to: socket.assigns.patch)}

      {:error, %Ecto.Changeset{} = changeset} ->
        {:noreply, assign_form(socket, changeset)}
    end
  end

  defp assign_form(socket, %Ecto.Changeset{} = changeset) do
    assign(socket, :form, to_form(changeset))
  end

  defp notify_parent(msg), do: send(self(), {__MODULE__, msg})
end
